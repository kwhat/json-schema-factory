{
    "name": "aicconsultinginc/json-schema-generator",
    "type": "library",
    "description": "A library to generate JSON schemas from PHPDoc annotations.",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Alexander Barker",
            "role": "Developer",
            "homepage": "https://github.com/kwhat"
        },
        {
            "name": "Hunter Elbourn",
            "role": "Developer",
            "homepage": "https://github.com/HunterEl"
        }
    ],
    "require": {
        "php": ">=5.6",
        "doctrine/common": "^2.7",
        "composer/composer": "^1.5"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0"
    },
    "autoload": {
        "psr-4": {
            "JsonSchema\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JsonSchema\\Test\\": "tests"
        }
    },
    "scripts": {
        "generate-schema": "JsonSchema\\Composer::generateSchema"
    }
}
